# Risk Analyzer Agent Environment Configuration
# Copy this file to .env and configure your settings

# LLM Provider Configuration
LLM_PROVIDER=walmart_llm_gateway
FALLBACK_LLM_PROVIDER=openai

# Walmart LLM Gateway Configuration
WALMART_LLM_GATEWAY_URL=https://wmtllmgateway.stage.walmart.com/wmtllmgateway
WALMART_LLM_GATEWAY_KEY=your-walmart-llm-gateway-key-here
WALMART_LLM_MODEL=gpt-4

# OpenAI Configuration (Fallback)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Anthropic Configuration  
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Git Integration Configuration
GIT_ACCESS_TOKEN=your-git-access-token-here
GIT_DEFAULT_REPO_URL=https://github.com/owner/repo
GIT_API_BASE_URL=https://api.github.com

# Optional: Override default LLM settings
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=3

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.company.com
EMAIL_FROM_ADDRESS=noreply@company.com

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/riskanalyzer

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# Metrics Configuration
METRICS_ENDPOINT=http://metrics.internal:8080
ENABLE_METRICS=true