# Risk Analyzer Agent Environment Configuration
# Copy this file to .env and configure your settings

# LLM Provider Configuration
LLM_PROVIDER=openai
FALLBACK_LLM_PROVIDER=anthropic

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Anthropic Configuration  
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Optional: Override default LLM settings
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=3

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.company.com
EMAIL_FROM_ADDRESS=noreply@company.com

# Database Configuration (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/riskanalyzer

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# Metrics Configuration
METRICS_ENDPOINT=http://metrics.internal:8080
ENABLE_METRICS=true